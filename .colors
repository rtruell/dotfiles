#!/usr/bin/env bash

# colors!!!
# caveates - these work as indicated except for:
# - BLINK and HIDDEN appear to be the same as DULL in iTerm on Yosemite.
# - DIM, ITALICS and HIDDEN appear to be the same as DULL via SSH to both Debian
#   11 and raspiOS in ZOC on Yosemite
# - BRIGHT and HIDDEN appear to be the same as DULL in Konsole on Debian 11
# - DIM appears to be the same as DULL, and HIDDEN is the same as BLINK in
#   Terminal on raspiOS
DULL=0
BRIGHT=1
DIM=2
ITALICS=3
UNDERLINE=4
BLINK=5
HIDDEN=6
REVERSE=7

FG_BLACK=30
FG_RED=31
FG_GREEN=32
FG_YELLOW=33
FG_BLUE=34
FG_PURPLE=35
FG_CYAN=36
FG_WHITE=37

BG_BLACK=40
BG_RED=41
BG_GREEN=42
BG_YELLOW=43
BG_BLUE=44
BG_PURPLE=45
BG_CYAN=46
BG_WHITE=47

##
# ANSI Escape Commands
##
ESC="\033"
NORMAL="${ESC}[m"

##
# Shortcuts for Colored Text
##

# Dull Text
DULL_BLACK="${ESC}[${DULL};${FG_BLACK}m"
DULL_RED="${ESC}[${DULL};${FG_RED}m"
DULL_GREEN="${ESC}[${DULL};${FG_GREEN}m"
DULL_YELLOW="${ESC}[${DULL};${FG_YELLOW}m"
DULL_BLUE="${ESC}[${DULL};${FG_BLUE}m"
DULL_PURPLE="${ESC}[${DULL};${FG_PURPLE}m"
DULL_CYAN="${ESC}[${DULL};${FG_CYAN}m"
DULL_WHITE="${ESC}[${DULL};${FG_WHITE}m"

# Bright Text
BRIGHT_BLACK="${ESC}[${BRIGHT};${FG_BLACK}m"
BRIGHT_RED="${ESC}[${BRIGHT};${FG_RED}m"
BRIGHT_GREEN="${ESC}[${BRIGHT};${FG_GREEN}m"
BRIGHT_YELLOW="${ESC}[${BRIGHT};${FG_YELLOW}m"
BRIGHT_BLUE="${ESC}[${BRIGHT};${FG_BLUE}m"
BRIGHT_PURPLE="${ESC}[${BRIGHT};${FG_PURPLE}m"
BRIGHT_CYAN="${ESC}[${BRIGHT};${FG_CYAN}m"
BRIGHT_WHITE="${ESC}[${BRIGHT};${FG_WHITE}m"

# Dim Text
DIM_BLACK="${ESC}[${DIM};${FG_BLACK}m"
DIM_RED="${ESC}[${DIM};${FG_RED}m"
DIM_GREEN="${ESC}[${DIM};${FG_GREEN}m"
DIM_YELLOW="${ESC}[${DIM};${FG_YELLOW}m"
DIM_BLUE="${ESC}[${DIM};${FG_BLUE}m"
DIM_PURPLE="${ESC}[${DIM};${FG_PURPLE}m"
DIM_CYAN="${ESC}[${DIM};${FG_CYAN}m"
DIM_WHITE="${ESC}[${DIM};${FG_WHITE}m"

# Italic Text
ITALICS_BLACK="${ESC}[${ITALICS};${FG_BLACK}m"
ITALICS_RED="${ESC}[${ITALICS};${FG_RED}m"
ITALICS_GREEN="${ESC}[${ITALICS};${FG_GREEN}m"
ITALICS_YELLOW="${ESC}[${ITALICS};${FG_YELLOW}m"
ITALICS_BLUE="${ESC}[${ITALICS};${FG_BLUE}m"
ITALICS_PURPLE="${ESC}[${ITALICS};${FG_PURPLE}m"
ITALICS_CYAN="${ESC}[${ITALICS};${FG_CYAN}m"
ITALICS_WHITE="${ESC}[${ITALICS};${FG_WHITE}m"

# Underlined Text
UNDERLINE_BLACK="${ESC}[${UNDERLINE};${FG_BLACK}m"
UNDERLINE_RED="${ESC}[${UNDERLINE};${FG_RED}m"
UNDERLINE_GREEN="${ESC}[${UNDERLINE};${FG_GREEN}m"
UNDERLINE_YELLOW="${ESC}[${UNDERLINE};${FG_YELLOW}m"
UNDERLINE_BLUE="${ESC}[${UNDERLINE};${FG_BLUE}m"
UNDERLINE_PURPLE="${ESC}[${UNDERLINE};${FG_PURPLE}m"
UNDERLINE_CYAN="${ESC}[${UNDERLINE};${FG_CYAN}m"
UNDERLINE_WHITE="${ESC}[${UNDERLINE};${FG_WHITE}m"

# Slowly Blinking Text
BLINK_BLACK="${ESC}[${BLINK};${FG_BLACK}m"
BLINK_RED="${ESC}[${BLINK};${FG_RED}m"
BLINK_GREEN="${ESC}[${BLINK};${FG_GREEN}m"
BLINK_YELLOW="${ESC}[${BLINK};${FG_YELLOW}m"
BLINK_BLUE="${ESC}[${BLINK};${FG_BLUE}m"
BLINK_PURPLE="${ESC}[${BLINK};${FG_PURPLE}m"
BLINK_CYAN="${ESC}[${BLINK};${FG_CYAN}m"
BLINK_WHITE="${ESC}[${BLINK};${FG_WHITE}m"

# Hidden Text
HIDDEN_BLACK="${ESC}[${HIDDEN};${FG_BLACK}m"
HIDDEN_RED="${ESC}[${HIDDEN};${FG_RED}m"
HIDDEN_GREEN="${ESC}[${HIDDEN};${FG_GREEN}m"
HIDDEN_YELLOW="${ESC}[${HIDDEN};${FG_YELLOW}m"
HIDDEN_BLUE="${ESC}[${HIDDEN};${FG_BLUE}m"
HIDDEN_PURPLE="${ESC}[${HIDDEN};${FG_PURPLE}m"
HIDDEN_CYAN="${ESC}[${HIDDEN};${FG_CYAN}m"
HIDDEN_WHITE="${ESC}[${HIDDEN};${FG_WHITE}m"

# Reversed Text
REVERSE_BLACK="${ESC}[${REVERSE};${FG_BLACK}m"
REVERSE_RED="${ESC}[${REVERSE};${FG_RED}m"
REVERSE_GREEN="${ESC}[${REVERSE};${FG_GREEN}m"
REVERSE_YELLOW="${ESC}[${REVERSE};${FG_YELLOW}m"
REVERSE_BLUE="${ESC}[${REVERSE};${FG_BLUE}m"
REVERSE_PURPLE="${ESC}[${REVERSE};${FG_PURPLE}m"
REVERSE_CYAN="${ESC}[${REVERSE};${FG_CYAN}m"
REVERSE_WHITE="${ESC}[${REVERSE};${FG_WHITE}m"

# Background
ON_BLACK="${ESC}[${BG_BLACK}m"
ON_RED="${ESC}[${BG_RED}m"
ON_GREEN="${ESC}[${BG_GREEN}m"
ON_YELLOW="${ESC}[${BG_YELLOW}m"
ON_BLUE="${ESC}[${BG_BLUE}m"
ON_PURPLE="${ESC}[${BG_PURPLE}m"
ON_CYAN="${ESC}[${BG_CYAN}m"
ON_WHITE="${ESC}[${BG_WHITE}m"

ALERT=${BRIGHT_WHITE}${ON_RED}
